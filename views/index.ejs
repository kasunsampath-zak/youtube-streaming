<!DOCTYPE html>
<html>
  <head>
    <title>Generate YouTube Video Link</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body,
      html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, sans-serif;
        width: 100%;
      }

      .container {
        text-align: center;
        width: 600px;
        max-width: 100%;
      }

      .form-group {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 10px;
      }

      .form-group input {
        font-size: 1.1em;
        padding-inline: 10px;
        width: 100%;
        max-width: 100%;
        border: 2px solid #18323f;
        border-radius: 10px;
        height: 50px;
      }

      .form-group input:focus {
        outline: none;
      }

      .form-group button {
        font-size: 1.1em;
        padding-inline: 10px;
        background-color: #18323f;
        color: #bfd6dd;
        border: none;
        cursor: pointer;
        text-wrap: nowrap;
        border-radius: 10px;
        height: 50px;
      }

      @media (max-width: 600px) {
        .form-group {
          flex-direction: column;
        }

        .form-group input {
          font-size: 1em;
          padding: 10px;
        }

        .form-group button {
          font-size: 1em;
          padding-inline: 10px;
          background-color: #18323f;
          color: #bfd6dd;
          border: none;
          cursor: pointer;
          width: 100%;
        }
      }

      ::placeholder {
        color: black;
        opacity: 1;
        /* Firefox */
      }

      ::-ms-input-placeholder {
        /* Edge 12 -18 */
        color: black;
      }

      .container div {
        background-color: #ecf9db;
        border-radius: 3px;
        text-align: left;
        padding: 13px;
        margin-top: 10px;
      }

      .container div span {
        color: #3b89ee;
        font-size: 0.95em;
        font-weight: 500;
        cursor: pointer;
        text-wrap: wrap;
        max-width: 100%;
        word-break: break-all;
      }

      .text-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
        width: 100%;
        width: 600px;
        max-width: 100%;
      }

      .copy-btn {
        padding: 5px 10px;
        cursor: pointer;
        background-color: #2d2e30;
        color: white;
        border-radius: 8px;
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        .text-container {
          flex-direction: column;
          gap: 10px;
          max-width: 100%;
        }
      }
    </style>
  </head>

  <body>
          <div class="container">
            <form class="form-group" action="/" method="post">
              <input
                type="text"
                name="videoUrl"
                placeholder="Enter YouTube URL"
                required
              />
              <button type="submit">Generate Link</button>
            </form>

            <div class="text-container">
              <span id="videoLink" onclick="openVideo()"></span>
              <button class="copy-btn" onclick="copyToClipboard()">Copy</button>
            </div>
          </div>
    </div>

    <script>
      // Function to get query parameter
      function getQueryParam(param) {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get(param);
      }

      // Display the message parameter if it exists
      const videoLink = getQueryParam("videoLink");
      if (videoLink) {
        let embedCode =
          '<iframe width="560" height="315" src="https://attendancetrackerwisesoftlab.online:91/video/' +
          videoLink +
          '" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>';
        document.getElementById("videoLink").textContent = embedCode;
      } else {
        document.getElementById("videoLink").parentElement.style.display =
          "none";
      }

      function openVideo() {
        window.open("/video/" + getQueryParam("videoLink"), "_blank").focus();
      }

      function copyToClipboard() {
        const textToCopy = document.getElementById("videoLink").textContent;
        const tempTextArea = document.createElement("textarea");
        tempTextArea.value = textToCopy;
        document.body.appendChild(tempTextArea);
        tempTextArea.select();
        document.execCommand("copy");
        document.body.removeChild(tempTextArea);
      }
    </script>
  </body>
</html>
